<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 30;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AjustarEstoqueController">

    <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="Ajustar Estoque" />

    <VBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
        <Label style="-fx-font-weight: bold;" text="Peça:" />
        <Label fx:id="lblNomePeca" style="-fx-font-size: 14;" text="-" />

        <Label style="-fx-font-weight: bold;" text="Estoque Atual:" />
        <Label fx:id="lblEstoqueAtual" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="0" />
    </VBox>

    <VBox spacing="5">
        <Label style="-fx-font-weight: bold;" text="Tipo de Operação:" />
        <ComboBox fx:id="comboOperacao" prefWidth="300.0" promptText="Selecione" />
    </VBox>

    <VBox spacing="5">
        <Label style="-fx-font-weight: bold;" text="Quantidade:" />
        <TextField fx:id="txtQuantidade" prefWidth="300.0" promptText="Digite a quantidade" />
    </VBox>

    <Label fx:id="lblNovoEstoque" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="Novo estoque: 0" />

    <HBox alignment="CENTER" spacing="15">
        <Button onAction="#confirmar" prefWidth="120.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10;" text="Confirmar" />
        <Button onAction="#cancelar" prefWidth="120.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 10;" text="Cancelar" />
    </HBox>

</VBox>