<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.VeiculoController">

    <top>
        <VBox style="-fx-background-color: #2c3e50;">

            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;">
                <Label text="Painel Administrativo - Oficina " textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblUsuario" text="Bem vindo, Admin!" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Button style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Sair" />
            </HBox>
        </VBox>
    </top>

    <left>
        <VBox prefWidth="200.0" spacing="5" style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
            <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Menu">
                <padding>
                    <Insets bottom="10.0" />
                </padding>
            </Label>

            <Button maxWidth="Infinity" onAction="#voltarParaPainel" prefHeight="40.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Clientes" />
            <Button maxWidth="Infinity" prefHeight="40.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Veiculos" />
            <Button maxWidth="Infinity" onAction="#irParaPecas" prefHeight="40.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Peças" />
            <Button maxWidth="Infinity" onAction="#irParaOrdens" prefHeight="40.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Ordens de serviço" />
            <Button maxWidth="Infinity" onAction="#irParaRelatorios" prefHeight="40.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Relatórios" />
            <Region VBox.vgrow="ALWAYS" />

            <Separator />
        </VBox>
    </left>

    <center>
        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20;">

            <!-- Barra de Ferramentas -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button onAction="#irParaAdicionar" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Adicionar" />
                <Button onAction="#irParaEditar" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Editar" />
                <Button onAction="#excluirVeiculo" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Excluir" />
            </HBox>

            <TableView fx:id="tabelaVeiculos" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                    <TableColumn fx:id="colPlaca" prefWidth="100.0" text="Placa" />
                    <TableColumn fx:id="colModelo" prefWidth="200.0" text="Modelo" />
                    <TableColumn fx:id="colAno" prefWidth="80.0" text="Ano" />
                    <TableColumn fx:id="colCliente" prefWidth="150.0" text="Proprietário" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </bottom>

</BorderPane>